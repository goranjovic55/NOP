# GitHub Actions CI/CD Workflow for E2E Tests
# This file can be added to .github/workflows/e2e-tests.yml

name: E2E Tests

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]
  workflow_dispatch:  # Allow manual trigger

jobs:
  e2e-tests:
    name: End-to-End Tests
    runs-on: ubuntu-latest
    timeout-minutes: 30

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Install Playwright browsers
        run: npx playwright install chromium --with-deps

      - name: Create .env file
        run: |
          cp .env.example .env
          echo "ADMIN_PASSWORD=admin123" >> .env
          echo "SECRET_KEY=test-secret-key-for-ci-only" >> .env

      - name: Start NOP platform
        run: |
          docker compose up -d
          sleep 30

      - name: Wait for backend
        run: |
          for i in {1..30}; do
            if curl -s http://localhost:12001/api/v1/health | grep -q "ok"; then
              echo "Backend is healthy"
              break
            fi
            echo "Waiting for backend... ($i/30)"
            sleep 2
          done

      - name: Start test environment
        run: |
          cd test-environment
          docker compose up -d
          sleep 10

      - name: Validate test hosts
        run: |
          chmod +x validate-test-hosts.sh
          ./validate-test-hosts.sh || echo "Some hosts may not be reachable, continuing..."

      - name: Run E2E tests
        run: |
          cd e2e
          npx playwright test --reporter=html --reporter=list
        continue-on-error: false

      - name: Upload test results
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: playwright-report
          path: e2e/playwright-report/
          retention-days: 30

      - name: Upload test screenshots
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: test-screenshots
          path: e2e/test-results/
          retention-days: 7

      - name: Show logs on failure
        if: failure()
        run: |
          echo "=== Backend Logs ==="
          docker compose logs backend
          echo "=== Frontend Logs ==="
          docker compose logs frontend
          echo "=== Test Environment Logs ==="
          cd test-environment && docker compose logs

      - name: Cleanup
        if: always()
        run: |
          docker compose down -v
          cd test-environment && docker compose down -v

  test-validation:
    name: Test Host Validation Only
    runs-on: ubuntu-latest
    timeout-minutes: 10

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Start test environment
        run: |
          cd test-environment
          docker compose up -d
          sleep 10

      - name: Validate all test hosts
        run: |
          chmod +x validate-test-hosts.sh
          ./validate-test-hosts.sh

      - name: Cleanup
        if: always()
        run: |
          cd test-environment && docker compose down -v

# Optional: Separate job for performance testing
  performance-tests:
    name: Performance Tests
    runs-on: ubuntu-latest
    timeout-minutes: 20
    if: github.event_name == 'pull_request'

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm ci

      - name: Install Playwright
        run: npx playwright install chromium --with-deps

      - name: Start services
        run: |
          cp .env.example .env
          docker compose up -d
          sleep 30

      - name: Run performance tests
        run: |
          cd e2e
          # Run only performance-related tests
          npx playwright test tests/live-connection-tests.spec.ts -g "Performance"

      - name: Cleanup
        if: always()
        run: docker compose down -v

# Optional: Scheduled nightly tests
  nightly-tests:
    name: Nightly Comprehensive Tests
    runs-on: ubuntu-latest
    timeout-minutes: 45
    if: github.event_name == 'schedule'

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Install dependencies
        run: npm ci

      - name: Install Playwright
        run: npx playwright install --with-deps

      - name: Run comprehensive test suite
        run: ./run-comprehensive-tests.sh

      - name: Upload comprehensive report
        if: always()
        uses: actions/upload-artifact@v3
        with:
          name: nightly-test-report
          path: |
            e2e/playwright-report/
            e2e/test-results/
          retention-days: 90

      - name: Notify on failure
        if: failure()
        uses: actions/github-script@v6
        with:
          script: |
            github.rest.issues.create({
              owner: context.repo.owner,
              repo: context.repo.repo,
              title: 'Nightly E2E Tests Failed',
              body: `The nightly E2E test suite failed on ${new Date().toISOString()}.\n\nCheck the [workflow run](${context.payload.repository.html_url}/actions/runs/${context.runId}) for details.`,
              labels: ['test-failure', 'automated']
            })

# To enable scheduled runs, uncomment:
# on:
#   schedule:
#     - cron: '0 2 * * *'  # Run at 2 AM UTC daily
